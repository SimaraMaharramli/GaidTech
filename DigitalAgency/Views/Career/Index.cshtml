@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->

<!-- Page Header Start -->
<!-- Contact Start -->

<div class="container-fluid ">
    <div class="row">
    
   </div>
    <div class="row justify-content-center my-3" style="margin-top: -200px;">
        <div class="col-lg-6 col-md-8 col-sm-10 px-0">
         
            <div class="contact-form bg-white rounded p-5">
                <div id="success"></div>
                <form name="sentMessage" id="contactForm" novalidate="novalidate" method="post">
                    <h1 class="display-4 text-uppercase text-center mt-5 mb-5 ">Career</h1>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="control-group">
                                <label for="fullname"></label>
                                <input type="text" class="form-control bg-light border-0 p-4" id="name" name="fullname" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="control-group">
                                <label for="email"></label>
                                <input type="email" class="form-control bg-light border-0 p-4" id="email" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="subject"></label>
                        <input type="text" class="form-control bg-light border-0 p-4" id="subject" placeholder="Subject" required="required" data-validation-required-message="Please enter a subject" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <label for="text"></label>
                        <input type="file" class="form-control bg-light border-0 py-3 px-5" rows="5" style="padding-bottom: 43px !important;" required="required" data-validation-required-message="Please enter your CV" accept=".pdf"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary text-uppercase py-3 px-5" type="submit" id="sendMessageButton">Send Form</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
